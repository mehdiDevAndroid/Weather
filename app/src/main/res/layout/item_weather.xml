<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingVertical="16dp"
    android:paddingHorizontal="20dp">

    <!-- Image view Left -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWeather"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_cloud_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabelSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/ivWeather"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/label_speed"
        tools:text="label 1" />


    <TextView
        android:id="@+id/tvLabelTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvLabelSpeed"
        app:layout_constraintTop_toBottomOf="@id/tvLabelSpeed"
        android:text="@string/label_temperature"
        tools:text="label 2" />

    <TextView
        android:id="@+id/tvLabelTemperatureApparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvLabelSpeed"
        app:layout_constraintTop_toBottomOf="@id/tvLabelTemperature"
        android:text="@string/label_temperature_apparent"
        tools:text="label 3" />

    <TextView
        android:id="@+id/tvValueSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvLabelSpeed"
        tools:text="20.12" />


    <TextView
        android:id="@+id/tvValueTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/tvValueSpeed"
        app:layout_constraintTop_toBottomOf="@id/tvValueSpeed"
        tools:text="15.74" />

    <TextView
        android:id="@+id/tvValueTemperatureApparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/tvValueSpeed"
        app:layout_constraintTop_toBottomOf="@id/tvValueTemperature"
        tools:text="10.56" />

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/separator_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelTemperatureApparent" />

</androidx.constraintlayout.widget.ConstraintLayout>